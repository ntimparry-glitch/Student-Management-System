<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sm.MainMenuController"
            prefWidth="480" prefHeight="380"
            style="-fx-background-color: #f8fafc;">

    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
    </padding>

    <center>
        <VBox spacing="30" alignment="CENTER">

            <Label text="Students Management"
                   style="-fx-font-size: 28px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #0d9488;
                          -fx-padding: 0 0 30 0;"/>

            <Button text="Manage Students"
                    prefWidth="260"
                    prefHeight="50"
                    style="-fx-background-color: #0d9488;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 8;"
                    onAction="#openStudentManagement"/>

            <Button text="Reports"
                    prefWidth="260"
                    prefHeight="50"
                    style="-fx-background-color: #0d9488;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 8;"
                    onAction="#openReports"/>

        </VBox>
    </center>
</BorderPane>